            <string>/// process AI
var _x, _y, i=0;
    // если игрок близко взрывается
    
if point_distance(x,y,hero.x,hero.y) &lt; 64 // взрыв
if phase == 0 {
    if sprite_index != sp_skelet_explode sprite_index = sp_skelet_explode
    image_index = 0
    phase = 1  // exploding
    sc_play_sound(sn_hit2, true)
    alarm[1] = room_speed * 0.1
}    

    
// реакция на игрока
if phase == 0 {
    repeat (range) { // смотрит вправо
        i++
        _x = x + 15*i
        _y = y - 16
        if collision_point(_x, _y, hero, false, true) {
            forward = 1
            break
        }
        if collision_point(_x, _y, ob_wall, false, true) {
            break
        }  
    }   
    i=0
    repeat (range) { // смотрит влево
        i++
        _x = x - 15*i
        _y = y - 16
        if collision_point(_x, _y, hero, false, true) {
            forward = -1
            break
        }
        if collision_point(_x, _y, ob_wall, false, true) {
            break
        }  
    }


    if shoot {
        sprite_index = sp_skelet_attack
        if (image_index &gt;= 1.8) and (image_index &lt; 1.9)
        with instance_create(x,y, ob_enemytargetshot) 
           speed = 2
        if image_index&gt;2.8 shoot = false
    } else {
        if hits &gt; 0 {
            hits--
            shoot = true
            image_index=0
        } else
            sprite_index = sp_skelet_idle    
    }
  
}

// детонация
if phase == 1 {
    if image_index &gt; 5.8 instance_destroy()
    exit
}

image_xscale = forward


